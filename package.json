{
  "name": "easy-nodegit",
  "version": "1.0.4",
  "description": "a high level wrapper for nodegit with simple and elegant API",
  "main": "lib/index.js",
  "scripts": {
    "lint": "standard --fix && npm-ensure -t deps",
    "test": "npm run lint && npm run test-local",
    "test-local": "mocha test/**/*.test.js",
    "test-cov": "nyc npm run test-local",
    "doc": "jsdoc2md lib/index.js > API.md",
    "ci": "npm run lint && npm run test-cov",
    "beta": "npm test && git release $npm_package_version && npm publish --tag beta",
    "release": "npm test && npm-ensure -t changelog && git release $npm_package_version && npm publish",
    "precommit": "standard && npm-ensure -t deps"
  },
  "ensure": {
    "deps": {
      "checkDirs": [
        "lib/**/*",
        "bin/*"
      ]
    }
  },
  "nyc": {
    "reporter": [
      "text",
      "json",
      "lcov"
    ]
  },
  "standard": {
    "global": [
      "describe",
      "it",
      "beforeEach",
      "afterEach"
    ],
    "ignore": [
      "/test"
    ]
  },
  "dependencies": {
    "nodegit": "0.21.0"
  },
  "devDependencies": {
    "husky": "0.x",
    "jsdoc-to-markdown": "^4.0.1",
    "mocha": "^3.0.2",
    "npm-ensure": "^1.0.0",
    "nyc": "11.x",
    "rimraf": "^2.6.2",
    "standard": "^8.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:yibn2008/easy-nodegit.git"
  },
  "keywords": [
    "easy-nodegit"
  ],
  "author": "zoujie.wzj",
  "license": "MIT"
}
